{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{% endblock %}

{% block body %}
    {{parent()}}
    
    <div class="container h-100 .col-"  width="200px" height="150px">
        <div class="row justify-content-left">
            <div class="col-sm-8 align-self-left text-left">
                
                {% for galeria in pagination %}
                    
                        <div class="bg-white rounded p-3 my-3" >
                            <div class="d-flex bd-highlight">
                                <div class="p-2 flex-grow-1 bd-highlight ">
                                    <h1  onclick="window.location.href='{{ path('verGaleria',{id:galeria.id})}}'">Title: {{galeria.title}}</h1><br>
                                    <h5>Description: {{galeria.description}}</h5>                                
                                    
                                </div>
                                <div class="p-2 bd-highlight">
                                    <div class="align-self-center ">
                                        <a href="{{ asset('uploads/photos/'~galeria.image)}}" data-lightbox="image-1" data-title="{{galeria.title}}"><img   src="{{ asset('uploads/photos/'~galeria.image)}}" width="200px" height="150px"></a>
                                        <br><br><br><h4>Autor: {{galeria.nombre}}</h4><br>                                        
                                        <a class="btn btn-success" onclick="window.location.href='{{ path('perfilUser',{id:galeria.id,nombre:galeria.nombre})}}'" >Perfil del Autor</a>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                {% endfor %}
                </div>
            </div>
        </div>        
        <div class="d-flex justify-content-center">
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>

{% endblock %}
