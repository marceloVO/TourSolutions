{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Subir Foto{% endblock %}

{% block body %}
    {{parent()}}
    
    <div class="container bg-white rounded my-3 p-4">
        <div class="d-flex bd-highlight">
            <div class="p-2 flex-grow-1 bd-highlight">
                <h3>{{ galeria.title }}</h3><!--Titulo del encabezado a editar-->                
                
            </div>
            <div class="p-2 bd-highlight">
                <div class="align-self-center">
                    <img class="rounded" src="{{ asset('uploads/photos/'~galeria.image)}}" width="200px" height="150px">
                </div>
            </div>
        </div>
        <hr>
        <div class="text-justify my-3">
            <div class="my-3" style="color:#3282b8;">
                    <i class="fa fa-thumbs-up"></i><strong> {{ galeria.description }} </strong>
            </div>

        </div>
    </div>

{% endblock %}
