{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Mis Foto{% endblock %}

{% block body %}
{{parent()}}
{% if app.user.baneado == 0 %}       
    {% if galeria %}
        <div class="container h-100" method="PUT" >
            <a class="btn btn-primary"  href='{{ path('perfilUser',{id:app.user.id,nombre:app.user.nombre})}}'>Perfil para amigos</a>
            <div class="row justify-content-left">                
                {% for galeria in galeria %}
                    <div class="col-lg-6 ">
                        <div class="bg-white rounded p-3 my-3 " >                        
                            <div class="d-flex bd-highlight">
                                <div class=" flex-grow-1 bd-highlight" style="text-align:center">                                
                                    <h1  >{{galeria.title}}</h1><br> 
                                    <a href="{{ asset('uploads/photos/'~galeria.image)}}" data-lightbox="image-1" data-title="{{galeria.title}}"><img   src="{{ asset('uploads/photos/'~galeria.image)}}" width="200px" height="150px"></a>
                                    <h5> {{galeria.description}}</h5>
                                    <a onclick="window.location.href='{{ path('editGaleria',{id:galeria.id})}}'"  type="submit" class="btn btn-success">Modificar</a>
                                    <a class="btn btn-danger delete-photo" onclick="confirmarEliminacion({{galeria.id}}) " >Eliminar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endif %}
{% endblock %}
